<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <gdpr>
            <general>
                <enabled>0</enabled>
            </general>
            <erasure>
                <enabled>0</enabled>
                <strategy>anonymize</strategy>
                <time_lapse>3600</time_lapse>
                <components backend_model="Opengento\Gdpr\Model\Config\Backend\ArraySerialized"></components><!-- todo -->
            </erasure>
            <anonymize>
                <customer_attributes backend_model="Opengento\Gdpr\Model\Config\Backend\ArraySerialized"></customer_attributes><!-- todo -->
                <customer_address_attributes backend_model="Opengento\Gdpr\Model\Config\Backend\ArraySerialized"></customer_address_attributes><!-- todo -->
            </anonymize>
            <export>
                <enabled>0</enabled>
                <renderer>html</renderer>
                <customer_attributes backend_model="Opengento\Gdpr\Model\Config\Backend\ArraySerialized"></customer_attributes><!-- todo -->
                <customer_address_attributes backend_model="Opengento\Gdpr\Model\Config\Backend\ArraySerialized"></customer_address_attributes><!-- todo -->
            </export>
        </gdpr>
    </default>
</config>
