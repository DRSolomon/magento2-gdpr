<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="export" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="20">
        <label>Export Settings</label>
        <depends>
            <field id="customer/gdpr/general/enabled">1</field>
        </depends>
        <field id="enabled" type="select" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="10">
            <label>Export</label>
            <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
            <config_path>gdpr/export/enabled</config_path>
        </field>
        <field id="block_id" type="select" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="20">
            <label>Information</label>
            <source_model>Magento\Cms\Model\Config\Source\Block</source_model>
            <depends>
                <field id="customer/gdpr/export/enabled">1</field>
            </depends>
            <config_path>gdpr/export/block_id</config_path>
        </field>
        <field id="renderer" type="select" translate="label comment" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="30">
            <label>Renderer</label>
            <source_model>Opengento\Gdpr\Model\Config\Source\ExportRenderer</source_model>
            <depends>
                <field id="customer/gdpr/export/enabled">1</field>
            </depends>
            <config_path>gdpr/export/renderer</config_path>
        </field>
        <group id="customer" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="40">
            <label>Customer</label>
            <field id="customer_attributes" type="multiselect" translate="label comment" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="10">
                <label>Customer Attributes</label>
                <comment>This attributes list will be exported when processed.</comment>
                <source_model>Opengento\Gdpr\Model\Config\Source\CustomerAttributes</source_model>
                <can_be_empty>1</can_be_empty>
                <depends>
                    <field id="customer/gdpr/export/enabled">1</field>
                </depends>
                <config_path>gdpr/export/customer_attributes</config_path>
            </field>
        </group>
        <group id="customer_address" translate="1" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="50">
            <label>Customer Address</label>
            <field id="customer_address_attributes" type="multiselect" translate="label comment" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="10">
                <label>Customer Address Attributes</label>
                <comment>This address attributes list will be exported when processed.</comment>
                <source_model>Opengento\Gdpr\Model\Config\Source\CustomerAddressAttributes</source_model>
                <can_be_empty>1</can_be_empty>
                <depends>
                    <field id="customer/gdpr/export/enabled">1</field>
                </depends>
                <config_path>gdpr/export/customer_address_attributes</config_path>
            </field>
        </group>
        <group id="quote" translate="1" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="60">
            <label>Quote</label>
            <field id="quote_attributes" type="text" translate="label comment" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="10">
                <label>Quote Attributes</label>
                <comment>Attributes must be separated with comma.</comment>
                <can_be_empty>1</can_be_empty>
                <depends>
                    <field id="customer/gdpr/export/enabled">1</field>
                </depends>
                <config_path>gdpr/export/quote_attributes</config_path>
            </field>
        </group>
        <group id="order" translate="1" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="70">
            <label>Order</label>
            <field id="order_attributes" type="text" translate="label comment" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="10">
                <label>Order Attributes</label>
                <comment>Attributes must be separated with comma.</comment>
                <can_be_empty>1</can_be_empty>
                <depends>
                    <field id="customer/gdpr/export/enabled">1</field>
                </depends>
                <config_path>gdpr/export/order_attributes</config_path>
            </field>
        </group>
        <group id="subscriber" translate="1" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="80">
            <label>Subscriber</label>
            <field id="subscriber_attributes" type="text" translate="label comment" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="10">
                <label>Subscriber Attributes</label>
                <comment>Attributes must be separated with comma.</comment>
                <can_be_empty>1</can_be_empty>
                <depends>
                    <field id="customer/gdpr/export/enabled">1</field>
                </depends>
                <config_path>gdpr/export/subscriber_attributes</config_path>
            </field>
        </group>
    </group>
</include>
