<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="opengento_gdpr_erase_customer" resource="default" engine="innodb" comment="Customer Erase Scheduler">
        <column xsi:type="smallint" name="entity_id" padding="11" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer Entity ID"/>
        <column xsi:type="timestamp" name="scheduled_at" nullable="false" comment="Scheduled At"/>
        <column xsi:type="varchar" name="state" length="255" nullable="false" comment="State"/>
        <column xsi:type="varchar" name="status" length="255" nullable="false" comment="Status"/>
        <column xsi:type="varchar" name="message" length="255" nullable="true" comment="Message"/>
        <column xsi:type="timestamp" name="erased_at" nullable="true" comment="Erased At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="OPENGENTO_GDPR_ERASE_CSTR_CSTR_ID_CSTR_ENTT_ENTT_ID" table="opengento_gdpr_erase_customer" column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="OPENGENTO_GDPR_ERASE_CUSTOMER_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
    </table>
</schema>
