<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">gdpr_action_listing.gdpr_action_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Execute New Action</label>
            </button>
        </buttons>
        <spinner>gdpr_action_columns</spinner>
        <deps>
            <dep>gdpr_action_listing.gdpr_action_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="gdpr_action_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">action_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Opengento_Gdpr::gdpr_actions</aclResource>
        <dataProvider class="Magento\Cms\Ui\Component\DataProvider" name="gdpr_action_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>action_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <exportButton name="export_button"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="edit">
                <settings>
                    <callback>
                        <target>editSelected</target>
                        <provider>gdpr_action_listing.gdpr_action_listing.gdpr_action_columns_editor</provider>
                    </callback>
                    <type>edit</type>
                    <label translate="true">Edit</label>
                </settings>
            </action>
            <action name="cancel">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to cancel the selected actions?</message>
                        <title translate="true">Cancel Actions</title>
                    </confirm>
                    <url path="gdpr/action/massCancel"/>
                    <type>cancel</type>
                    <label translate="true">Cancel</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="gdpr_action_columns">
        <settings>
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <item name="saveUrl" xsi:type="url" path="gdpr/action/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <param name="indexField" xsi:type="string">action_id</param>
                <param name="enabled" xsi:type="boolean">true</param>
                <param name="selectProvider" xsi:type="string">gdpr_action_listing.gdpr_action_listing.gdpr_action_columns.ids</param>
            </editorConfig>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">gdpr_action_listing.gdpr_action_listing.gdpr_action_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids" sortOrder="10">
            <settings>
                <indexField>action_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="action_id" sortOrder="20">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="type" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">Type</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="scheduled_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date" sortOrder="40">
            <settings>
                <filter>dateRange</filter>
                <editor>
                    <editorType>date</editorType>
                </editor>
                <dataType>date</dataType>
                <label translate="true">Scheduled At</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="performed_from" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Performed From</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="performed_by" sortOrder="60">
            <settings>
                <filter>text</filter>
                <label translate="true">Performed By</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="performed_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date" sortOrder="70">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Performed At</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="state" component="Magento_Ui/js/grid/columns/select" sortOrder="80">
            <settings>
                <options class="Opengento\Gdpr\Model\Config\Source\ActionStates"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">State</label>
            </settings>
        </column>
        <column name="message" sortOrder="90">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Message</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="parameters" sortOrder="100">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Parameters</label>
                <visible>true</visible>
            </settings>
        </column>
        <actionsColumn name="actions" class="Opengento\Gdpr\Ui\Component\Listing\Column\Actions">
            <settings>
                <indexField>action_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
